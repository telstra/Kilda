# topology configuration
config:
  topology.parallelism: {{ getv "/kilda_storm_flow_hs_parallelism" }}
  topology.workers: {{ getv "/kilda_storm_parallelism_workers_count" }}

# spout definitions
spouts:
  - id: "coordinator.spout"
    parallelism: 1

# bolt definitions
bolts:
  - id: "coordinator.bolt"
    parallelism: 1
  - id: "FLOW_REROUTE_HUB"
    parallelism: 64
  - id: "FLOW_REROUTE_SPEAKER_WORKER"
    parallelism: 64
  - id: "FLOW_ROUTER_BOLT"
    parallelism: 4
  - id: "SPEAKER_REQUEST_SENDER"
    parallelism: 4
